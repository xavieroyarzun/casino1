    <p> Usuario:<input type="text" id="viejologin" ></p>
    <p> Contraseña: <input type="password" id="viejoContraseña"></p>
        <input onclick="ir2()" type ="button" value="inicio"> 
    <script>
        function ir2()
        {
           const user= document.getElementById("viejologin").value;
           const contra= document.getElementById("viejoContraseña").value;

           const Userguardado=localStorage.getItem("UsuarioGuardado")
           const contraguardado=localStorage.getItem("ContraseñaGuardada")
            
           if(user === Userguardado && contra === contraguardado)
           {
            alert("Bienvenido" + user );
            window.location="casino.html";

           }
           else{
            alert("contraseña o usuario erroneo ");
           }
            
           
        }


    </script>



</form>
